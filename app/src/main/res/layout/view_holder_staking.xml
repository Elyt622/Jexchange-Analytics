<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/textview_name_token"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_token"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_name_token"
        app:layout_constraintStart_toEndOf="@+id/textview_name_token"
        app:layout_constraintTop_toTopOf="@+id/textview_name_token"
        android:contentDescription="@string/token_image" />

    <TextView
        android:id="@+id/textview_number_token"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_token"
        app:layout_constraintTop_toTopOf="@+id/textview_name_token" />

    <TextView
        android:id="@+id/textview_tokens_dollars"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/textview_number_token"
        app:layout_constraintTop_toTopOf="@+id/textview_number_token" />

</androidx.constraintlayout.widget.ConstraintLayout>