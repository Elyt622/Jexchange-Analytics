<resources>
    <!-- Base application theme. -->
    <style name="Theme.Jexchange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenJex</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/design_default_color_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/design_default_color_on_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/greenJex</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowBackground">@color/nightBackground</item>
        <item name="autoCompleteTextViewStyle">@style/AutocompleteStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="materialCardViewStyle">@style/MaterialCardViewStyle</item>
    </style>

    <style name="AutocompleteStyle" parent="android:Widget.AutoCompleteTextView">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/nightBackground</item>
    </style>

    <style name="MaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/nightBackground</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#11FFFFFF</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardMaxElevation">5dp</item>
        <item name="rippleColor">@color/white</item>
    </style>
</resources>